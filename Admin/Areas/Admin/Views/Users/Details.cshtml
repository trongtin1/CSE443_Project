@model CSE443_Project.Models.User

<h2>Chi tiết người dùng</h2>

<table class="table">
    <tr>
        <th>Họ tên</th>
        <td>@Model.name</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.email</td>
    </tr>
    <tr>
        <th>Role</th>
        <td>@Model.role</td>
    </tr>
    <tr>
        <th>Số điện thoại</th>
        <td>@Model.phone</td>
    </tr>
    <tr>
        <th>Ngày tạo</th>
        <td>@Model.created_at.ToString("dd/MM/yyyy")</td>
    </tr>
</table>

<a class="btn btn-secondary" href="/Admin/Users">Quay lại</a>
