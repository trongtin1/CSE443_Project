@model CSE443_Project.Models.User

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <a href="/Admin/Users" class="btn btn-light rounded-circle me-3 shadow-sm">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h2 class="mb-0 fw-bold text-primary">User Details</h2>
        </div>
        <div class="d-flex gap-2">
            <a href="/Admin/Users/Edit/@Model.user_id" class="btn btn-warning d-flex align-items-center shadow-sm">
                <i class="fas fa-edit me-2"></i>Edit
            </a>
            <a href="/Admin/Users/Delete/@Model.user_id" class="btn btn-danger d-flex align-items-center shadow-sm">
                <i class="fas fa-trash me-2"></i>Delete
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <div class="avatar-circle bg-primary text-white mx-auto mb-3" style="width: 100px; height: 100px; font-size: 2.5rem;">
                            @(string.IsNullOrEmpty(Model.name) ? "?" : Model.name.Substring(0, 1).ToUpper())
                        </div>
                        <h3 class="fw-bold mb-1">@(string.IsNullOrEmpty(Model.name) ? "Unnamed User" : Model.name)</h3>
                        @if (!string.IsNullOrEmpty(Model.role))
                        {
                            <span class="badge bg-@(Model.role.ToLower() == "admin" ? "danger" : "success") rounded-pill px-3 py-2">
                                @Model.role
                            </span>
                        }
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-envelope text-primary me-2"></i>
                                        <h6 class="mb-0 fw-semibold">Email Address</h6>
                                    </div>
                                    <p class="mb-0">@(string.IsNullOrEmpty(Model.email) ? "No email provided" : Model.email)</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-user-shield text-primary me-2"></i>
                                        <h6 class="mb-0 fw-semibold">Role</h6>
                                    </div>
                                    <p class="mb-0">@(string.IsNullOrEmpty(Model.role) ? "No role assigned" : Model.role)</p>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.phone))
                        {
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="fas fa-phone text-primary me-2"></i>
                                            <h6 class="mb-0 fw-semibold">Phone Number</h6>
                                        </div>
                                        <p class="mb-0">@Model.phone</p>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-calendar text-primary me-2"></i>
                                        <h6 class="mb-0 fw-semibold">Created At</h6>
                                    </div>
                                    <p class="mb-0">@Model.created_at.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center mt-4">
                        <a href="/Admin/Users" class="btn btn-light px-4">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .btn {
        border-radius: 6px;
        padding: 0.5rem 1rem;
    }

    .badge {
        font-size: 0.9rem;
    }
</style>
