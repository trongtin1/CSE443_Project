@model CSE443_Project.Models.User

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <a href="/Admin/Users/Index" class="btn btn-light rounded-circle me-3 shadow-sm">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h2 class="mb-0 fw-bold text-primary">User Details</h2>
        </div>
        <div class="d-flex gap-2">
            @* <a href="/Admin/Users/Edit/@Model.Id" class="btn btn-warning d-flex align-items-center shadow-sm">
                <i class="fas fa-edit me-2"></i>Edit
            </a> *@
            @* <a href="/Admin/Users/Delete/@Model.Id" class="btn btn-danger d-flex align-items-center shadow-sm">
                <i class="fas fa-trash me-2"></i>Delete
            </a> *@
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <div class="avatar-circle bg-primary text-white mx-auto mb-3" style="width: 100px; height: 100px; font-size: 2.5rem;">
                            @(string.IsNullOrEmpty(Model.Username) ? "?" : Model.Username.Substring(0, 1).ToUpper())
                        </div>
                        <h3 class="fw-bold mb-1">@(string.IsNullOrEmpty(Model.Username) ? "Unnamed User" : Model.Username)</h3>
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-envelope text-primary me-2"></i>
                                        <h6 class="mb-0 fw-semibold">Email Address</h6>
                                    </div>
                                    <p class="mb-0">@(string.IsNullOrEmpty(Model.Email) ? "No email provided" : Model.Email)</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-phone text-primary me-2"></i>
                                        <h6 class="mb-0 fw-semibold">Phone Number</h6>
                                    </div>
                                    <p class="mb-0">@Model.Phone</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                        <h6 class="mb-0 fw-semibold">Address</h6>
                                    </div>
                                    <p class="mb-0">@Model.Address, @Model.City</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-calendar text-primary me-2"></i>
                                        <h6 class="mb-0 fw-semibold">Created At</h6>
                                    </div>
                                    <p class="mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center mt-4">
                        <a href="/Admin/Users/Index" class="btn btn-light px-4">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .btn {
        border-radius: 6px;
        padding: 0.5rem 1rem;
    }

    .badge {
        font-size: 0.9rem;
    }
</style>
