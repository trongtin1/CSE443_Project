@model CSE443_Project.Models.User

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <a href="/Admin/Users" class="btn btn-light rounded-circle me-3 shadow-sm">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h2 class="mb-0 fw-bold text-danger">Delete User</h2>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <div class="avatar-circle bg-danger text-white mx-auto mb-3" style="width: 100px; height: 100px; font-size: 2.5rem;">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <h3 class="fw-bold mb-2">Are you sure you want to delete this user?</h3>
                        <p class="text-muted">This action cannot be undone.</p>
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-user text-primary me-2"></i>
                                        <h6 class="mb-0 fw-semibold">Name</h6>
                                    </div>
                                    <p class="mb-0">@Model.name</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-envelope text-primary me-2"></i>
                                        <h6 class="mb-0 fw-semibold">Email</h6>
                                    </div>
                                    <p class="mb-0">@Model.email</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-user-shield text-primary me-2"></i>
                                        <h6 class="mb-0 fw-semibold">Role</h6>
                                    </div>
                                    <p class="mb-0">@Model.role</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="user_id" />
                        <div class="d-flex justify-content-center gap-3">
                            <a href="/Admin/Users" class="btn btn-light px-4">Cancel</a>
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="fas fa-trash me-2"></i>Delete User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .btn {
        border-radius: 6px;
        padding: 0.5rem 1rem;
    }
</style>
