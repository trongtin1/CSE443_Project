@model CSE443_Project.Models.Job

<h2>Thêm công việc mới</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Tiêu đề công việc</label>
        <input asp-for="JobTitle" class="form-control" />
    </div>
    <div class="form-group">
        <label>Mô tả công việc</label>
        <textarea asp-for="JobDescription" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Yêu cầu</label>
        <textarea asp-for="Requirements" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Quyền lợi</label>
        <textarea asp-for="Benefits" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Loại công việc</label>
        <input asp-for="JobType" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kinh nghiệm</label>
        <input asp-for="ExperienceLevel" class="form-control" />
    </div>
    <div class="form-group">
        <label>Vị trí</label>
        <input asp-for="Location" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ngành nghề</label>
        <input asp-for="Industry" class="form-control" />
    </div>
    <div class="form-group">
        <label>Lương tối thiểu</label>
        <input asp-for="SalaryMin" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label>Lương tối đa</label>
        <input asp-for="SalaryMax" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label>Làm việc từ xa</label>
        <input asp-for="IsRemote" class="form-check-input" type="checkbox" />
    </div>
    <div class="form-group">
        <label>Số lượng tuyển</label>
        <input asp-for="Vacancies" class="form-control" type="number" min="1" />
    </div>
    <div class="form-group">
        <label>Hạn nộp</label>
        <input asp-for="Deadline" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label>Nhà tuyển dụng (ID)</label>
        <input asp-for="EmployerId" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label>Danh mục công việc (ID)</label>
        <input asp-for="CategoryId" class="form-control" type="number" />
    </div>
    <button type="submit" class="btn btn-success mt-2">Tạo mới</button>
</form>
