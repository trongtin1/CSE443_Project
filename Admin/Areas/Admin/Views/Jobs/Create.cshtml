@model Admin.Models.Job

<h2>Add New Job</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Location</label>
        <input asp-for="Location" class="form-control" />
    </div>
    <div class="form-group">
        <label>Company</label>
        <input asp-for="Company" class="form-control" />
    </div>
    <div class="form-group">
        <label>Industry</label>
        <input asp-for="Industry" class="form-control" />
    </div>
    <div class="form-group">
        <label>Employment Type</label>
        <input asp-for="EmploymentType" class="form-control" />
    </div>
    <div class="form-group">
        <label>Salary Min</label>
        <input asp-for="SalaryMin" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label>Salary Max</label>
        <input asp-for="SalaryMax" class="form-control" type="number" step="0.01" />
    </div>
    <button type="submit" class="btn btn-success mt-2">Create</button>
</form>
