@model IEnumerable<CSE443_Project.Models.Application>

<h2>Danh sách đơn ứng tuyển</h2>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Job Seeker ID</th>
            <th>Job ID</th>
            <th>CV ID</th>
            <th>Trạng thái</th>
            <th>Ngày ứng tuyển</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var app in Model)
        {
            <tr>
                <td>@app.JobSeekerId</td>
                <td>@app.JobId</td>
                <td>@app.CVId</td>
                <td>@app.Status</td>
                <td>@app.ApplicationDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a class="btn btn-info" href="/Admin/Applications/Details/@app.Id">Chi tiết</a>
                    <a class="btn btn-danger" href="/Admin/Applications/Delete/@app.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
