@model Admin.Models.Settings.SettingsViewModel

@{
    ViewData["Title"] = "Settings";
}

<style>
    body {
        background-color: #f2f4f8;
    }
    .card {
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        transition: all 0.2s ease;
    }
    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 15px rgba(0,0,0,0.1);
    }
    .card-header {
        background: linear-gradient(to right, #007bff, #00bfff);
        color: white;
        font-weight: 600;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }
    .btn-save {
        background-color: #007bff;
        border: none;
        color: white;
        font-weight: 500;
        transition: background-color 0.3s ease;
    }
    .btn-save:hover {
        background-color: #0056b3;
    }
</style>

<div class="container-fluid">
    <div class="d-flex align-items-center mb-4">
        <a href="/Admin/Home" class="btn btn-outline-primary me-3">
            <i class="fas fa-arrow-left me-2"></i>Back
        </a>
        <h2 class="mb-0">Settings</h2>
    </div>
    <div class="container py-4">
        <h2 class="text-center fw-bold mb-4">System Settings</h2>

        <div class="row g-4">
            <!-- General Settings -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header px-4 py-2">General Settings</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Site Name</label>
                            <input type="text" class="form-control" value="Job Portal">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" rows="2">Find jobs easily</textarea>
                        </div>
                        <button class="btn btn-save">Save</button>
                    </div>
                </div>
            </div>

            <!-- Email Settings -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header px-4 py-2">Email Settings</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">SMTP Server</label>
                            <input type="text" class="form-control" value="smtp.mail.com">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" value="admin@mail.com">
                        </div>
                        <button class="btn btn-save">Save</button>
                    </div>
                </div>
            </div>

            <!-- Notification Settings -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header px-4 py-2">Notification Settings</div>
                    <div class="card-body">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" checked>
                            <label class="form-check-label">Notify on new registration</label>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label">Notify on new job post</label>
                        </div>
                        <button class="btn btn-save">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
