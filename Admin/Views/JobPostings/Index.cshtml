@model IEnumerable<Admin.Models.JobPosting>

@{
    ViewData["Title"] = "Job Postings Management";
}

<div class="container-fluid">
    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold">All Job Postings</h6>
                <div>
                    <a href="#" class="btn btn-sm btn-success me-2">
                        <i class="bi bi-file-earmark-excel me-1"></i> Export
                    </a>
                    <button type="button" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus-circle me-1"></i> Add New
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search job postings...">
                        <button class="btn btn-primary" type="button">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-funnel me-1"></i> Filter
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">All</a></li>
                            <li><a class="dropdown-item" href="#">Active</a></li>
                            <li><a class="dropdown-item" href="#">Expired</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Recent Postings</a></li>
                            <li><a class="dropdown-item" href="#">Most Applications</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="selectAll">
                                </div>
                            </th>
                            <th>Job Title</th>
                            <th>Company</th>
                            <th>Location</th>
                            <th>Type</th>
                            <th>Posted</th>
                            <th>Expiry</th>
                            <th>Status</th>
                            <th>Applications</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var job in Model)
                        {
                            var daysLeft = (job.ExpiryDate - DateTime.Now).Days;
                            var statusClass = job.IsActive ? 
                                (daysLeft <= 3 ? "bg-warning" : "bg-success") : 
                                "bg-danger";
                            var statusText = job.IsActive ? 
                                (daysLeft <= 3 ? "Expiring Soon" : "Active") : 
                                "Expired";
                                
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="@job.Id">
                                    </div>
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@job.Id" class="text-decoration-none fw-bold">
                                        @job.Title
                                    </a>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (job.Employer != null && !string.IsNullOrEmpty(job.Employer.LogoUrl))
                                        {
                                            <img src="@job.Employer.LogoUrl" class="me-2" alt="Logo" width="24" height="24">
                                        }
                                        <span>@(job.Employer?.CompanyName ?? "Unknown Company")</span>
                                    </div>
                                </td>
                                <td>@job.Location</td>
                                <td>
                                    <span class="badge bg-secondary">@job.JobType</span>
                                </td>
                                <td>@job.PostedDate.ToString("MMM d, yyyy")</td>
                                <td>
                                    @job.ExpiryDate.ToString("MMM d, yyyy")
                                    @if (daysLeft > 0 && daysLeft <= 3)
                                    {
                                        <span class="ms-1 text-warning">(@daysLeft days left)</span>
                                    }
                                </td>
                                <td>
                                    <form asp-action="ToggleActive" asp-route-id="@job.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm badge @statusClass">
                                            @statusText
                                        </button>
                                    </form>
                                </td>
                                <td>
                                    <span class="badge bg-info">@job.ApplicationCount</span>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Actions
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@job.Id"><i class="bi bi-eye me-2"></i>View</a></li>
                                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@job.Id"><i class="bi bi-pencil me-2"></i>Edit</a></li>
                                            <li><a class="dropdown-item" href="#"><i class="bi bi-people me-2"></i>View Applicants</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@job.Id">
                                                    <i class="bi bi-trash me-2"></i>Delete
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-3">
                <div>
                    <span class="text-muted">Showing 1 to @Model.Count() of @Model.Count() entries</span>
                </div>
                <nav>
                    <ul class="pagination mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Previous</a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('selectAll').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('tbody .form-check-input');
            checkboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
        });
    </script>
} 