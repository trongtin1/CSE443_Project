@model Admin.Models.Settings.SettingsViewModel

@{
    ViewData["Title"] = "Settings";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold">Settings Menu</h6>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <a href="#profile-section" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="bi bi-person me-3"></i> Profile Settings
                        </a>
                        <a href="#system-section" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="bi bi-gear me-3"></i> System Settings
                        </a>
                        <a href="#email-section" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="bi bi-envelope me-3"></i> Email Settings
                        </a>
                        <a asp-action="Profile" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="bi bi-person-vcard me-3"></i> Detailed Profile Settings
                        </a>
                        <a asp-action="System" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="bi bi-sliders me-3"></i> Detailed System Settings
                        </a>
                        <a asp-action="Email" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="bi bi-envelope-paper me-3"></i> Detailed Email Settings
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card mb-4" id="profile-section">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold">Profile Settings</h6>
                    <a asp-action="Profile" class="btn btn-sm btn-primary">Edit Profile</a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center mb-4 mb-md-0">
                            <img src="@Model.ProfileSettings.ProfilePictureUrl" alt="Profile" class="img-thumbnail rounded-circle mb-3" style="width: 150px; height: 150px;">
                            <div>@Model.ProfileSettings.FullName</div>
                            <div class="small text-muted">@Model.ProfileSettings.JobTitle</div>
                        </div>
                        <div class="col-md-9">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label text-muted">Full Name</label>
                                        <div>@Model.ProfileSettings.FullName</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label text-muted">Email</label>
                                        <div>@Model.ProfileSettings.Email</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label text-muted">Phone Number</label>
                                        <div>@Model.ProfileSettings.PhoneNumber</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label text-muted">Department</label>
                                        <div>@Model.ProfileSettings.Department</div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="mb-3">
                                        <label class="form-label text-muted">Bio</label>
                                        <div>@Model.ProfileSettings.Bio</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4" id="system-section">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold">System Settings</h6>
                    <a asp-action="System" class="btn btn-sm btn-primary">Edit System Settings</a>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Site Name</label>
                                <div>@Model.SystemSettings.SiteName</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Admin Email</label>
                                <div>@Model.SystemSettings.AdminEmail</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label text-muted">Default Language</label>
                                <div>@Model.SystemSettings.DefaultLanguage</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label text-muted">Jobs Per Page</label>
                                <div>@Model.SystemSettings.JobsPerPage</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label text-muted">Date Format</label>
                                <div>@Model.SystemSettings.DateFormat</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Maintenance Mode</label>
                                <div>
                                    @if (Model.SystemSettings.MaintenanceMode)
                                    {
                                        <span class="badge bg-danger">Enabled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Disabled</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">Job Posting Approval Required</label>
                                <div>
                                    @if (Model.SystemSettings.JobPostingApprovalRequired)
                                    {
                                        <span class="badge bg-primary">Required</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Not Required</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card" id="email-section">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold">Email Settings</h6>
                    <a asp-action="Email" class="btn btn-sm btn-primary">Edit Email Settings</a>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">SMTP Server</label>
                                <div>@Model.EmailSettings.SmtpServer</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label text-muted">SMTP Port</label>
                                <div>@Model.EmailSettings.SmtpPort</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label text-muted">SSL Enabled</label>
                                <div>
                                    @if (Model.EmailSettings.EnableSsl)
                                    {
                                        <span class="badge bg-success">Enabled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Disabled</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">From Email</label>
                                <div>@Model.EmailSettings.FromEmail</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">From Name</label>
                                <div>@Model.EmailSettings.FromName</div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="mb-3">
                                <label class="form-label text-muted">Email Notifications</label>
                                <div class="d-flex flex-wrap gap-2">
                                    @if (Model.EmailSettings.SendWelcomeEmail)
                                    {
                                        <span class="badge bg-info">Welcome Email</span>
                                    }
                                    @if (Model.EmailSettings.SendJobPostingNotification)
                                    {
                                        <span class="badge bg-info">Job Posting Notification</span>
                                    }
                                    @if (Model.EmailSettings.SendApplicationNotification)
                                    {
                                        <span class="badge bg-info">Application Notification</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
} 