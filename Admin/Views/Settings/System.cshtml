@model Admin.Models.Settings.SystemSettings

@{
    ViewData["Title"] = "System Settings";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold">Settings</h6>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <a asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="bi bi-grid-3x3-gap me-3"></i> Settings Overview
                        </a>
                        <a asp-action="Profile" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="bi bi-person me-3"></i> Profile Settings
                        </a>
                        <a asp-action="System" class="list-group-item list-group-item-action d-flex align-items-center active">
                            <i class="bi bi-gear me-3"></i> System Settings
                        </a>
                        <a asp-action="Email" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="bi bi-envelope me-3"></i> Email Settings
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-9">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            <div class="card">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold">System Settings</h6>
                </div>
                <div class="card-body">
                    <form asp-action="System" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <h6 class="border-bottom pb-2 mb-3">General Settings</h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="SiteName" class="form-control" placeholder="Site Name">
                                    <label asp-for="SiteName">Site Name</label>
                                    <span asp-validation-for="SiteName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="SiteLogoUrl" class="form-control" placeholder="Site Logo URL">
                                    <label asp-for="SiteLogoUrl">Site Logo URL</label>
                                    <span asp-validation-for="SiteLogoUrl" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="AdminEmail" class="form-control" placeholder="Admin Email">
                                    <label asp-for="AdminEmail">Admin Email</label>
                                    <span asp-validation-for="AdminEmail" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="DefaultLanguage" class="form-select">
                                        <option value="English">English</option>
                                        <option value="Spanish">Spanish</option>
                                        <option value="French">French</option>
                                        <option value="German">German</option>
                                        <option value="Japanese">Japanese</option>
                                    </select>
                                    <label asp-for="DefaultLanguage">Default Language</label>
                                </div>
                            </div>
                        </div>
                        
                        <h6 class="border-bottom pb-2 mb-3">Display Settings</h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="JobsPerPage" type="number" min="5" max="100" class="form-control" placeholder="Jobs Per Page">
                                    <label asp-for="JobsPerPage">Jobs Per Page</label>
                                    <span asp-validation-for="JobsPerPage" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="DateFormat" class="form-select">
                                        <option value="MM/dd/yyyy">MM/dd/yyyy</option>
                                        <option value="dd/MM/yyyy">dd/MM/yyyy</option>
                                        <option value="yyyy-MM-dd">yyyy-MM-dd</option>
                                        <option value="dd-MMM-yyyy">dd-MMM-yyyy</option>
                                    </select>
                                    <label asp-for="DateFormat">Date Format</label>
                                </div>
                            </div>
                        </div>
                        
                        <h6 class="border-bottom pb-2 mb-3">System Features</h6>
                        <div class="mb-4">
                            <div class="form-check mb-2">
                                <input asp-for="EnableEmailNotifications" class="form-check-input">
                                <label asp-for="EnableEmailNotifications" class="form-check-label">Enable Email Notifications</label>
                            </div>
                            
                            <div class="form-check mb-2">
                                <input asp-for="EnableJobApplicationSystem" class="form-check-input">
                                <label asp-for="EnableJobApplicationSystem" class="form-check-label">Enable Job Application System</label>
                            </div>
                            
                            <div class="form-check mb-2">
                                <input asp-for="JobPostingApprovalRequired" class="form-check-input">
                                <label asp-for="JobPostingApprovalRequired" class="form-check-label">Job Posting Approval Required</label>
                            </div>
                            
                            <div class="form-check mb-2">
                                <input asp-for="AllowPublicRegistration" class="form-check-input">
                                <label asp-for="AllowPublicRegistration" class="form-check-label">Allow Public Registration</label>
                            </div>
                        </div>
                        
                        <h6 class="border-bottom pb-2 mb-3">Maintenance</h6>
                        <div class="mb-4">
                            <div class="form-check mb-3">
                                <input asp-for="MaintenanceMode" class="form-check-input" id="maintenanceMode">
                                <label asp-for="MaintenanceMode" class="form-check-label">Enable Maintenance Mode</label>
                            </div>
                            
                            <div id="maintenanceMessageContainer" class="mb-3">
                                <div class="form-floating">
                                    <textarea asp-for="MaintenanceMessage" class="form-control" placeholder="Maintenance Message" style="height: 100px;"></textarea>
                                    <label asp-for="MaintenanceMessage">Maintenance Message</label>
                                    <span asp-validation-for="MaintenanceMessage" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancel</a>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const maintenanceMode = document.getElementById('maintenanceMode');
            const maintenanceMessageContainer = document.getElementById('maintenanceMessageContainer');
            
            function toggleMaintenanceMessage() {
                if (maintenanceMode.checked) {
                    maintenanceMessageContainer.style.display = 'block';
                } else {
                    maintenanceMessageContainer.style.display = 'none';
                }
            }
            
            // Initial toggle
            toggleMaintenanceMessage();
            
            // Add event listener
            maintenanceMode.addEventListener('change', toggleMaintenanceMessage);
        });
    </script>
} 