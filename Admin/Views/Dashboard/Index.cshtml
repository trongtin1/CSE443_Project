@model Admin.Models.Dashboard.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-uppercase mb-1">Total Candidates</div>
                        <div class="h3 mb-0 font-weight-bold">@Model.TotalCandidates</div>
                        <div class="text-xs mt-2">
                            <span class="text-success">
                                <i class="bi bi-graph-up-arrow"></i> +@Model.NewCandidatesToday today
                            </span>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-people fs-2 text-info opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-uppercase mb-1">Total Employers</div>
                        <div class="h3 mb-0 font-weight-bold">@Model.TotalEmployers</div>
                        <div class="text-xs mt-2">
                            <span class="text-success">
                                <i class="bi bi-graph-up-arrow"></i> +@Model.NewEmployersToday today
                            </span>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-building fs-2 text-success opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-uppercase mb-1">Active Jobs</div>
                        <div class="h3 mb-0 font-weight-bold">@Model.ActiveJobs</div>
                        <div class="text-xs mt-2">
                            <span class="text-success">
                                <i class="bi bi-graph-up-arrow"></i> +@Model.NewJobsToday today
                            </span>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-briefcase fs-2 text-primary opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-uppercase mb-1">Total Applications</div>
                        <div class="h3 mb-0 font-weight-bold">@Model.TotalApplications</div>
                        <div class="text-xs mt-2">
                            <span class="text-success">
                                <i class="bi bi-graph-up-arrow"></i> +@Model.NewApplicationsToday today
                            </span>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-file-earmark-text fs-2 text-warning opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-xl-8 col-lg-7">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold">Monthly Overview</h6>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        Last 7 Days
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li><a class="dropdown-item" href="#">Last 7 Days</a></li>
                        <li><a class="dropdown-item" href="#">Last 30 Days</a></li>
                        <li><a class="dropdown-item" href="#">Last 90 Days</a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <canvas id="areaChart" height="250"></canvas>
            </div>
        </div>
    </div>

    <div class="col-xl-4 col-lg-5">
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold">Job Postings by Industry</h6>
            </div>
            <div class="card-body">
                <canvas id="pieChart" height="260"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold">Recent Candidates</h6>
                <a href="#" class="btn btn-sm btn-primary">View All</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-borderless">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Experience</th>
                                <th>Status</th>
                                <th>Registered</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://via.placeholder.com/36" class="rounded-circle me-2" alt="Avatar">
                                        <span>John Doe</span>
                                    </div>
                                </td>
                                <td>3 years</td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>2 days ago</td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://via.placeholder.com/36" class="rounded-circle me-2" alt="Avatar">
                                        <span>Jane Smith</span>
                                    </div>
                                </td>
                                <td>5 years</td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>3 days ago</td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://via.placeholder.com/36" class="rounded-circle me-2" alt="Avatar">
                                        <span>Robert Johnson</span>
                                    </div>
                                </td>
                                <td>2 years</td>
                                <td><span class="badge bg-warning">Pending</span></td>
                                <td>4 days ago</td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://via.placeholder.com/36" class="rounded-circle me-2" alt="Avatar">
                                        <span>Emily Wilson</span>
                                    </div>
                                </td>
                                <td>7 years</td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>5 days ago</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold">Recent Job Postings</h6>
                <a href="#" class="btn btn-sm btn-primary">View All</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-borderless">
                        <thead>
                            <tr>
                                <th>Job Title</th>
                                <th>Company</th>
                                <th>Status</th>
                                <th>Applications</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Senior Developer</td>
                                <td>Tech Solutions Inc.</td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>24</td>
                            </tr>
                            <tr>
                                <td>Marketing Manager</td>
                                <td>Digital Marketing Co.</td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>16</td>
                            </tr>
                            <tr>
                                <td>UI/UX Designer</td>
                                <td>Creative Studios</td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>18</td>
                            </tr>
                            <tr>
                                <td>Sales Representative</td>
                                <td>Sales Experts Ltd.</td>
                                <td><span class="badge bg-danger">Expired</span></td>
                                <td>12</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Line Chart
        const areaChart = document.getElementById('areaChart').getContext('2d');
        new Chart(areaChart, {
            type: 'line',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.CandidateRegistrationsChart.Select(c => $"'{c.Label}'")))],
                datasets: [
                    {
                        label: 'Candidates',
                        data: [@string.Join(",", Model.CandidateRegistrationsChart.Select(c => c.Value))],
                        borderColor: '#4e73df',
                        backgroundColor: 'rgba(78, 115, 223, 0.1)',
                        fill: true,
                        tension: 0.3
                    },
                    {
                        label: 'Job Postings',
                        data: [@string.Join(",", Model.JobPostingsChart.Select(c => c.Value))],
                        borderColor: '#36b9cc',
                        backgroundColor: 'rgba(54, 185, 204, 0.1)',
                        fill: true,
                        tension: 0.3
                    },
                    {
                        label: 'Applications',
                        data: [@string.Join(",", Model.ApplicationsChart.Select(c => c.Value))],
                        borderColor: '#f6c23e',
                        backgroundColor: 'rgba(246, 194, 62, 0.1)',
                        fill: true,
                        tension: 0.3
                    }
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            color: '#e2e8f0'
                        }
                    }
                },
                scales: {
                    x: {
                        ticks: {
                            color: '#adbac7'
                        },
                        grid: {
                            color: 'rgba(255, 255, 255, 0.05)'
                        }
                    },
                    y: {
                        ticks: {
                            color: '#adbac7',
                            beginAtZero: true
                        },
                        grid: {
                            color: 'rgba(255, 255, 255, 0.05)'
                        }
                    }
                }
            }
        });

        // Pie Chart
        const pieChart = document.getElementById('pieChart').getContext('2d');
        new Chart(pieChart, {
            type: 'doughnut',
            data: {
                labels: ['Technology', 'Healthcare', 'Finance', 'Education', 'Retail'],
                datasets: [{
                    data: [35, 20, 15, 15, 15],
                    backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b'],
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            color: '#e2e8f0'
                        }
                    }
                }
            }
        });
    </script>
} 