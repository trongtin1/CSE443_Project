@model IEnumerable<Admin.Models.Employer>

@{
    ViewData["Title"] = "Employers Management";
}

<div class="container-fluid">
    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold">All Employers</h6>
                <div>
                    <a href="#" class="btn btn-sm btn-success me-2">
                        <i class="bi bi-file-earmark-excel me-1"></i> Export
                    </a>
                    <button type="button" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus-circle me-1"></i> Add New
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search employers...">
                        <button class="btn btn-primary" type="button">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-funnel me-1"></i> Filter
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">All</a></li>
                            <li><a class="dropdown-item" href="#">Verified</a></li>
                            <li><a class="dropdown-item" href="#">Unverified</a></li>
                            <li><a class="dropdown-item" href="#">Active</a></li>
                            <li><a class="dropdown-item" href="#">Inactive</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">New Registrations</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="selectAll">
                                </div>
                            </th>
                            <th>Company</th>
                            <th>Industry</th>
                            <th>Contact</th>
                            <th>Size</th>
                            <th>Verified</th>
                            <th>Status</th>
                            <th>Job Postings</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employer in Model)
                        {
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="@employer.Id">
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(employer.LogoUrl))
                                        {
                                            <img src="@employer.LogoUrl" class="me-2" alt="Logo" width="36" height="36">
                                        }
                                        else
                                        {
                                            <div class="avatar-placeholder rounded me-2 bg-secondary d-flex align-items-center justify-content-center" style="width:36px;height:36px;">
                                                <span class="text-white">@employer.CompanyName.Substring(0, 1)</span>
                                            </div>
                                        }
                                        <div>
                                            <a asp-action="Details" asp-route-id="@employer.Id" class="text-decoration-none fw-bold">
                                                @employer.CompanyName
                                            </a>
                                            <div class="small text-muted">@employer.Website</div>
                                        </div>
                                    </div>
                                </td>
                                <td>@employer.Industry</td>
                                <td>
                                    <div>@employer.ContactPerson</div>
                                    <div class="small text-muted">@employer.Email</div>
                                </td>
                                <td>@employer.CompanySize</td>
                                <td>
                                    <form asp-action="ToggleVerification" asp-route-id="@employer.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm @(employer.IsVerified ? "btn-outline-success" : "btn-outline-warning")">
                                            @if (employer.IsVerified)
                                            {
                                                <i class="bi bi-patch-check-fill me-1"></i>
                                                <span>Verified</span>
                                            }
                                            else
                                            {
                                                <i class="bi bi-patch-exclamation me-1"></i>
                                                <span>Verify</span>
                                            }
                                        </button>
                                    </form>
                                </td>
                                <td>
                                    @if (employer.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@employer.JobPostingsCount</span>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Actions
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@employer.Id"><i class="bi bi-eye me-2"></i>View</a></li>
                                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@employer.Id"><i class="bi bi-pencil me-2"></i>Edit</a></li>
                                            <li><a class="dropdown-item" href="#"><i class="bi bi-briefcase me-2"></i>Job Listings</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@employer.Id">
                                                    <i class="bi bi-trash me-2"></i>Delete
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-3">
                <div>
                    <span class="text-muted">Showing 1 to @Model.Count() of @Model.Count() entries</span>
                </div>
                <nav>
                    <ul class="pagination mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Previous</a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('selectAll').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('tbody .form-check-input');
            checkboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
        });
    </script>
} 