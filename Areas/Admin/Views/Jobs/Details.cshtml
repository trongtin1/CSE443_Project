@model CSE443_Project.Models.Job

<h2>Chi tiết công việc</h2>

<table class="table">
    <tr>
        <th>Tiêu đề</th>
        <td>@Model.JobTitle</td>
    </tr>
    <tr>
        <th>Mô tả</th>
        <td>@Model.JobDescription</td>
    </tr>
    <tr>
        <th>Yêu cầu</th>
        <td>@Model.Requirements</td>
    </tr>
    <tr>
        <th>Quyền lợi</th>
        <td>@Model.Benefits</td>
    </tr>
    <tr>
        <th>Vị trí</th>
        <td>@Model.Location</td>
    </tr>
    <tr>
        <th>Ngành nghề</th>
        <td>@Model.Industry</td>
    </tr>
    <tr>
        <th>Kinh nghiệm</th>
        <td>@Model.ExperienceLevel</td>
    </tr>
    <tr>
        <th>Lương</th>
        <td>@string.Format("{0:N0} - {1:N0} VND", Model.SalaryMin, Model.SalaryMax)</td>
    </tr>
    <tr>
        <th>Loại công việc</th>
        <td>@Model.JobType</td>
    </tr>
    <tr>
        <th>Làm việc từ xa</th>
        <td>@(Model.IsRemote ? "Có" : "Không")</td>
    </tr>
    <tr>
        <th>Số lượng tuyển</th>
        <td>@Model.Vacancies</td>
    </tr>
    <tr>
        <th>Hạn nộp</th>
        <td>@Model.Deadline.ToString("dd/MM/yyyy")</td>
    </tr>
    <tr>
        <th>Nhà tuyển dụng</th>
        <td>@Model.Employer?.CompanyName</td>
    </tr>
    <tr>
        <th>Danh mục</th>
        <td>@Model.Category?.Name</td>
    </tr>
</table>

<a class="btn btn-secondary" href="/Admin/Jobs">Quay lại</a>
