@model IEnumerable<CSE443_Project.Models.Job>

<h2>Danh sách công việc</h2>

<a class="btn btn-primary" href="/Admin/Jobs/Create">Thêm mới công việc</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Vị trí</th>
            <th>Mức lương</th>
            <th>Loại công việc</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.JobTitle</td>
                <td>@job.Location</td>
                <td>@string.Format("{0:N0} - {1:N0} VND", job.SalaryMin, job.SalaryMax)</td>
                <td>@job.JobType</td>
                <td>
                    <a class="btn btn-info" href="/Admin/Jobs/Details/@job.Id">Chi tiết</a>
                    <a class="btn btn-warning" href="/Admin/Jobs/Edit/@job.Id">Sửa</a>
                    <a class="btn btn-danger" href="/Admin/Jobs/Delete/@job.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
