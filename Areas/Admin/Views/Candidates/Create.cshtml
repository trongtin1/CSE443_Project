@model CSE443_Project.Models.Candidate
@{
    ViewData["Title"] = "Add Candidate";
    var applications = ViewBag.Applications as List<CSE443_Project.Models.Application>;
}

<h2>Add Candidate</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="ApplicationId" class="form-label">Application</label>
        <select asp-for="ApplicationId" class="form-select" required>
            <option value="">-- Select Application --</option>
            @if (applications != null)
            {
                foreach (var app in applications)
                {
                    <option value="@app.Id">
                        [@app.Id] @app.JobSeeker?.User?.Username - @app.Job?.JobTitle
                    </option>
                }
            }
        </select>
        <span asp-validation-for="ApplicationId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select">
            <option value="Shortlisted">Shortlisted</option>
            <option value="Interviewed">Interviewed</option>
            <option value="Hired">Hired</option>
            <option value="Rejected">Rejected</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="InterviewNotes" class="form-label"></label>
        <textarea asp-for="InterviewNotes" class="form-control"></textarea>
        <span asp-validation-for="InterviewNotes" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="InterviewDate" class="form-label"></label>
        <input asp-for="InterviewDate" class="form-control" type="date" />
        <span asp-validation-for="InterviewDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ShortlistedDate" class="form-label"></label>
        <input asp-for="ShortlistedDate" class="form-control" type="date" />
        <span asp-validation-for="ShortlistedDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}