@model CSE443_Project.Models.Application

<h2>Xác nhận xóa đơn ứng tuyển</h2>

<div>
    <h4>Ứng viên ID: @Model.Id, Job ID: @Model.JobId</h4>
    <p>Bạn có chắc chắn muốn xóa đơn ứng tuyển này không?</p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a class="btn btn-secondary" href="/Admin/Applications">Hủy</a>
    </form>
</div>
