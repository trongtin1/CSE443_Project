@{
    ViewData["Title"] = "Company Profile";
    Layout = "~/Areas/Client/Views/Shared/_RecruiterLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Company Profile</h1>
        <a href="#" class="d-none d-sm-inline-block btn btn-primary shadow-sm" id="saveProfileBtn">
            <i class="fas fa-save fa-sm text-white-50 mr-1"></i> Save Changes
        </a>
    </div>

    <div class="row">
        <!-- Company Information Card -->
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Company Information</h6>
                </div>
                <div class="card-body">
                    <form id="companyProfileForm">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="companyName">Company Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="companyName" value="ABC Company Ltd." required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="businessType">Business Type <span class="text-danger">*</span></label>
                                <select class="form-control" id="businessType" required>
                                    <option value="corporation">Corporation</option>
                                    <option value="limited" selected>Limited Company</option>
                                    <option value="private">Private Enterprise</option>
                                    <option value="foreign">Foreign Invested Enterprise</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="taxCode">Tax Code</label>
                                <input type="text" class="form-control" id="taxCode" value="0123456789">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="foundedYear">Founded Year</label>
                                <input type="number" class="form-control" id="foundedYear" value="2010">
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="companySize">Company Size</label>
                                <select class="form-control" id="companySize">
                                    <option value="1-10">1-10 employees</option>
                                    <option value="11-50" selected>11-50 employees</option>
                                    <option value="51-200">51-200 employees</option>
                                    <option value="201-500">201-500 employees</option>
                                    <option value="501-1000">501-1000 employees</option>
                                    <option value="1000+">Over 1000 employees</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="companyIndustry">Business Industry <span class="text-danger">*</span></label>
                                <select class="form-control" id="companyIndustry" required>
                                    <option value="it" selected>Information Technology</option>
                                    <option value="telecom">Telecommunications</option>
                                    <option value="finance">Finance - Banking</option>
                                    <option value="education">Education - Training</option>
                                    <option value="manufacturing">Manufacturing</option>
                                    <option value="retail">Retail</option>
                                    <option value="healthcare">Healthcare - Pharmaceuticals</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="companyAddress">Address <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="companyAddress" value="123 Nguyen Van Linh Street, District 7, Ho Chi Minh City" required>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="companyEmail">Contact Email <span class="text-danger">*</span></label>
                                <input type="email" class="form-control" id="companyEmail" value="contact@abc.com" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="companyPhone">Phone Number <span class="text-danger">*</span></label>
                                <input type="tel" class="form-control" id="companyPhone" value="0283456789" required>
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="companyWebsite">Website</label>
                                <input type="url" class="form-control" id="companyWebsite" value="https://abc.com">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="companyFacebook">Facebook</label>
                                <input type="url" class="form-control" id="companyFacebook" value="https://facebook.com/abc">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="companyDescription">Company Description <span class="text-danger">*</span></label>
                            <textarea class="form-control" id="companyDescription" rows="5" required>ABC Company Ltd. specializes in providing software solutions, website design, and mobile applications. We are committed to delivering high-quality products that meet our customers' needs.</textarea>
                        </div>
                        
                        <div class="form-group">
                            <label for="companyBenefits">Company Benefits</label>
                            <textarea class="form-control" id="companyBenefits" rows="3">- Full insurance as per regulations
- Holiday and project bonuses
- Professional training
- Dynamic and professional work environment
- High career advancement opportunities</textarea>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Profile Image & Verification -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Logo & Verification</h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <img class="img-fluid rounded" src="https://via.placeholder.com/200x200" alt="Company Logo" style="max-width: 200px;">
                        </div>
                        <button class="btn btn-primary btn-sm">
                            <i class="fas fa-upload mr-1"></i> Change Logo
                        </button>
                    </div>
                    
                    <hr>
                    
                    <div class="mb-3">
                        <h6 class="font-weight-bold">Verification Status</h6>
                        <div class="d-flex align-items-center mt-2">
                            <div class="mr-2">
                                <i class="fas fa-check-circle text-success fa-2x"></i>
                            </div>
                            <div>
                                <div class="font-weight-bold">Verified</div>
                                <div class="small text-muted">Verification date: 10/05/2024</div>
                            </div>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="mb-3">
                        <h6 class="font-weight-bold">Business License</h6>
                        <div class="d-flex align-items-center mt-2">
                            <div class="mr-2">
                                <i class="fas fa-file-pdf text-danger fa-2x"></i>
                            </div>
                            <div>
                                <div>BL-123456.pdf</div>
                                <div class="small text-muted">Uploaded: 01/05/2024</div>
                            </div>
                        </div>
                        <button class="btn btn-outline-primary btn-sm mt-2">
                            <i class="fas fa-upload mr-1"></i> Upload New License
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Other Settings -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Other Settings</h6>
                </div>
                <div class="card-body">
                    <div class="custom-control custom-switch mb-3">
                        <input type="checkbox" class="custom-control-input" id="receiveApplications" checked>
                        <label class="custom-control-label" for="receiveApplications">Receive new application notifications</label>
                    </div>
                    
                    <div class="custom-control custom-switch mb-3">
                        <input type="checkbox" class="custom-control-input" id="showProfile" checked>
                        <label class="custom-control-label" for="showProfile">Show company profile publicly</label>
                    </div>
                    
                    <div class="custom-control custom-switch mb-3">
                        <input type="checkbox" class="custom-control-input" id="emailNotifications" checked>
                        <label class="custom-control-label" for="emailNotifications">Receive email notifications</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Handle form submission
            $('#saveProfileBtn').on('click', function(e) {
                e.preventDefault();
                
                // Validate form
                if (!$('#companyProfileForm')[0].checkValidity()) {
                    $('#companyProfileForm')[0].reportValidity();
                    return;
                }
                
                // Save company profile
                alert('Company information updated successfully!');
            });
        });
    </script>
} 