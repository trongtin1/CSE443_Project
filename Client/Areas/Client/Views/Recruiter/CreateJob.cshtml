@{
    ViewData["Title"] = "Post Job";
    Layout = "~/Areas/Client/Views/Shared/_RecruiterLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Post Job</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Job Information</h6>
        </div>
        <div class="card-body">
            <form id="createJobForm">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="jobTitle">Job Title <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="jobTitle" placeholder="Example: Frontend Developer, UI/UX Designer..." required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="jobLocation">Location <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="jobLocation" placeholder="Example: Ho Chi Minh City, Hanoi..." required>
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="jobCategory">Industry <span class="text-danger">*</span></label>
                        <select class="form-control" id="jobCategory" required>
                            <option value="" selected disabled>Select industry</option>
                            <option value="it">Information Technology</option>
                            <option value="finance">Finance - Accounting</option>
                            <option value="marketing">Marketing</option>
                            <option value="sales">Business - Sales</option>
                            <option value="design">Design - Creative</option>
                            <option value="education">Education - Training</option>
                            <option value="engineering">Engineering - Mechanical</option>
                            <option value="healthcare">Healthcare - Pharmaceutical</option>
                            <option value="hospitality">Restaurant - Hotel</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="experienceLevel">Experience <span class="text-danger">*</span></label>
                        <select class="form-control" id="experienceLevel" required>
                            <option value="" selected disabled>Select experience level</option>
                            <option value="fresher">No experience</option>
                            <option value="junior">1-2 years</option>
                            <option value="middle">3-5 years</option>
                            <option value="senior">Over 5 years</option>
                            <option value="manager">Management</option>
                            <option value="executive">Director and above</option>
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="employmentType">Employment Type <span class="text-danger">*</span></label>
                        <select class="form-control" id="employmentType" required>
                            <option value="" selected disabled>Select type</option>
                            <option value="fulltime">Full-time</option>
                            <option value="parttime">Part-time</option>
                            <option value="contract">Contract</option>
                            <option value="temporary">Temporary</option>
                            <option value="internship">Internship</option>
                            <option value="remote">Remote</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="salaryMin">Minimum Salary</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="salaryMin" placeholder="Minimum salary">
                            <div class="input-group-append">
                                <span class="input-group-text">VND</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="salaryMax">Maximum Salary</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="salaryMax" placeholder="Maximum salary">
                            <div class="input-group-append">
                                <span class="input-group-text">VND</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input type="checkbox" class="form-check-input" id="hideSalary">
                    <label class="form-check-label" for="hideSalary">Hide salary</label>
                </div>

                <div class="form-group">
                    <label for="deadline">Application Deadline <span class="text-danger">*</span></label>
                    <input type="date" class="form-control" id="deadline" required>
                </div>

                <div class="form-group">
                    <label for="jobDescription">Job Description <span class="text-danger">*</span></label>
                    <textarea class="form-control" id="jobDescription" rows="5" placeholder="Detailed description of the job, responsibilities, tasks..." required></textarea>
                </div>

                <div class="form-group">
                    <label for="jobRequirements">Job Requirements <span class="text-danger">*</span></label>
                    <textarea class="form-control" id="jobRequirements" rows="5" placeholder="List of requirements, skills, qualifications needed..." required></textarea>
                </div>

                <div class="form-group">
                    <label for="benefits">Benefits</label>
                    <textarea class="form-control" id="benefits" rows="3" placeholder="Describe benefits, perks, compensation..."></textarea>
                </div>

                <div class="form-group">
                    <label for="jobTags">Search Keywords</label>
                    <input type="text" class="form-control" id="jobTags" placeholder="Example: java, spring, frontend, UI/UX...">
                    <small class="form-text text-muted">Keywords separated by commas</small>
                </div>

                <div class="form-group">
                    <label>Display Settings</label>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="featuredJob">
                        <label class="custom-control-label" for="featuredJob">Post as featured job (fee: 500,000 VND/week)</label>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-5">Post Job</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#createJobForm').on('submit', function(e) {
                e.preventDefault();
                
                // Success notification and redirect
                alert('Job posted successfully!');
                window.location.href = '/Client/Recruiter/ManageJobs';
            });
        });
    </script>
} 