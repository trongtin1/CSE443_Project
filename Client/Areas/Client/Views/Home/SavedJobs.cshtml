@{
    ViewData["Title"] = "Saved Jobs";
    Layout = "~/Areas/Client/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Saved Jobs</h6>
                <div>
                    <button class="btn btn-sm btn-outline-danger" id="clearAllSaved">
                        <i class="fas fa-trash-alt mr-1"></i> Clear all
                    </button>
                </div>
            </div>
            <div class="card-body">
                <!-- Saved Jobs Listings -->
                <div class="saved-jobs-listings">
                    <!-- Saved Job 1 -->
                    <div class="card mb-3 job-card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="d-flex">
                                        <div class="company-logo-wrapper mr-3">
                                            <img src="https://via.placeholder.com/60" class="company-logo rounded" alt="Company Logo">
                                        </div>
                                        <div class="job-details">
                                            <h5 class="job-title font-weight-bold mb-1">Front-end Developer (ReactJS)</h5>
                                            <p class="company-name mb-2 text-muted">XYZ Software Company</p>
                                            <div class="job-meta mb-2">
                                                <span class="badge badge-light mr-2"><i class="fas fa-money-bill-wave text-success mr-1"></i>20 - 30 million</span>
                                                <span class="badge badge-light mr-2"><i class="fas fa-map-marker-alt text-danger mr-1"></i>Da Nang</span>
                                                <span class="badge badge-light"><i class="fas fa-calendar-alt text-primary mr-1"></i>5 days left to apply</span>
                                            </div>
                                            <p class="job-description small text-muted mb-0">
                                                Develop user interfaces with ReactJS, optimize performance, work with RESTful APIs, fix bugs and improve applications...
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-items-center justify-content-end">
                                    <button class="btn btn-outline-danger rounded-pill btn-sm mr-2 remove-saved">
                                        <i class="fas fa-trash-alt mr-1"></i> Remove
                                    </button>
                                    <button class="btn btn-primary rounded-pill btn-sm">
                                        <i class="fas fa-paper-plane mr-1"></i> Apply
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Saved Job 2 -->
                    <div class="card mb-3 job-card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="d-flex">
                                        <div class="company-logo-wrapper mr-3">
                                            <img src="https://via.placeholder.com/60" class="company-logo rounded" alt="Company Logo">
                                        </div>
                                        <div class="job-details">
                                            <h5 class="job-title font-weight-bold mb-1">Digital Marketing Specialist (8-12 million)</h5>
                                            <p class="company-name mb-2 text-muted">ABC Solutions Company Limited</p>
                                            <div class="job-meta mb-2">
                                                <span class="badge badge-light mr-2"><i class="fas fa-money-bill-wave text-success mr-1"></i>8 - 12 million</span>
                                                <span class="badge badge-light mr-2"><i class="fas fa-map-marker-alt text-danger mr-1"></i>Ho Chi Minh City</span>
                                                <span class="badge badge-light"><i class="fas fa-calendar-alt text-primary mr-1"></i>20 days left to apply</span>
                                            </div>
                                            <p class="job-description small text-muted mb-0">
                                                Plan online marketing, implement advertising campaigns, optimize SEO/SEM, analyze data and reporting...
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-items-center justify-content-end">
                                    <button class="btn btn-outline-danger rounded-pill btn-sm mr-2 remove-saved">
                                        <i class="fas fa-trash-alt mr-1"></i> Remove
                                    </button>
                                    <button class="btn btn-primary rounded-pill btn-sm">
                                        <i class="fas fa-paper-plane mr-1"></i> Apply
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Saved Job 3 -->
                    <div class="card mb-3 job-card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="d-flex">
                                        <div class="company-logo-wrapper mr-3">
                                            <img src="https://via.placeholder.com/60" class="company-logo rounded" alt="Company Logo">
                                        </div>
                                        <div class="job-details">
                                            <h5 class="job-title font-weight-bold mb-1">Sales Representative - Unlimited Income</h5>
                                            <p class="company-name mb-2 text-muted">TECHNICAL TECHNOLOGY JOINT STOCK COMPANY</p>
                                            <div class="job-meta mb-2">
                                                <span class="badge badge-light mr-2"><i class="fas fa-money-bill-wave text-success mr-1"></i>15 - 45 million</span>
                                                <span class="badge badge-light mr-2"><i class="fas fa-map-marker-alt text-danger mr-1"></i>Hanoi</span>
                                                <span class="badge badge-light"><i class="fas fa-calendar-alt text-primary mr-1"></i>15 days left to apply</span>
                                            </div>
                                            <p class="job-description small text-muted mb-0">
                                                Find potential customers, develop market, negotiate and sign contracts with customers, achieve sales targets...
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-items-center justify-content-end">
                                    <button class="btn btn-outline-danger rounded-pill btn-sm mr-2 remove-saved">
                                        <i class="fas fa-trash-alt mr-1"></i> Remove
                                    </button>
                                    <button class="btn btn-primary rounded-pill btn-sm">
                                        <i class="fas fa-paper-plane mr-1"></i> Apply
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Empty state (hidden by default) -->
                    <div class="empty-state text-center py-5 d-none" id="emptyState">
                        <div class="mb-3">
                            <i class="fas fa-bookmark fa-4x text-muted"></i>
                        </div>
                        <h5 class="mb-3">You haven't saved any jobs yet</h5>
                        <p class="text-muted mb-4">When you save a job, it will appear here for you to track later.</p>
                        <a href="@Url.Action("ApplyJobs", "Home", new { area = "Client" })" class="btn btn-primary">
                            <i class="fas fa-search mr-1"></i> Find jobs now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .company-logo {
        width: 60px;
        height: 60px;
        object-fit: contain;
    }
    
    .job-card {
        transition: all 0.2s ease;
    }
    
    .job-card:hover {
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
    
    .rounded-pill {
        border-radius: 50rem!important;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Check login
            var isLoggedIn = localStorage.getItem('isLoggedIn') === 'true';
            var userType = localStorage.getItem('userType');
            
            if (isLoggedIn && userType === 'candidate') {
                // Switch UI for candidate
                switchToCandidateUI();
            } else {
                // Redirect to login page
                window.location.href = '/Client/Home/Index';
            }
            
            // Remove saved job
            $('.remove-saved').click(function() {
                var jobCard = $(this).closest('.job-card');
                var jobTitle = jobCard.find('.job-title').text();
                
                if (confirm('Are you sure you want to remove this job: ' + jobTitle + '?')) {
                    jobCard.fadeOut(300, function() {
                        $(this).remove();
                        
                        // Check if no saved jobs remain, then show empty state
                        if($('.job-card').length === 0) {
                            $('#emptyState').removeClass('d-none');
                        }
                    });
                }
            });
            
            // Clear all saved jobs
            $('#clearAllSaved').click(function() {
                if (confirm('Are you sure you want to remove all saved jobs?')) {
                    $('.job-card').fadeOut(300, function() {
                        $(this).remove();
                        $('#emptyState').removeClass('d-none');
                    });
                }
            });
        });
    </script>
} 