            </div>
        </div>
    </div>
</div>

<style>
    .company-logo-small {
        width: 40px;
        height: 40px;
        object-fit: contain;
    }
    
    .timeline {
        position: relative;
        padding-left: 30px;
        list-style: none;
    }
    
    .timeline-item {
        position: relative;
        padding-bottom: 1.5rem;
    }
    
    .timeline-item:last-child {
        padding-bottom: 0;
    }
    
    .timeline-marker {
        position: absolute;
        left: -30px;
        width: 15px;
        height: 15px;
        border-radius: 50%;
    }
    
    .timeline-item:not(:last-child):before {
        content: '';
        position: absolute;
        left: -23px;
        top: 15px;
        height: calc(100% - 15px);
        width: 1px;
        background-color: #e3e6f0;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Check login
            var isLoggedIn = localStorage.getItem('isLoggedIn') === 'true';
            var userType = localStorage.getItem('userType');
            
            if (isLoggedIn && userType === 'candidate') {
                // Switch UI for candidate
                switchToCandidateUI();
            } else {
                // Redirect to login page
                window.location.href = '/Client/Home/Index';
            }
            
            // Initialize tooltips
            $('[data-toggle="tooltip"]').tooltip();
            
            // View application details
            $('.view-application').click(function() {
                $('#applicationDetailsModal').modal('show');
            });
            
            // Withdraw application
            $('.withdraw-application').click(function() {
                var jobTitle = $(this).closest('tr').find('.font-weight-bold').text();
                
                if (confirm('Are you sure you want to withdraw your application for: ' + jobTitle + '?')) {
                    // Here you would normally make an API call to withdraw the application
                    alert('Application withdrawn successfully!');
                    // Then remove the row from the table
                    $(this).closest('tr').fadeOut(300, function() {
                        $(this).remove();
                        
                        // Check if no applications remain, then show empty state
                        if($('tbody tr').length === 0) {
                            $('#emptyState').removeClass('d-none');
                        }
                    });
                }
            });
            
            // Modal withdraw button
            $('#modalWithdrawBtn').click(function() {
                var jobTitle = $('#modalJobTitle').text();
                
                if (confirm('Are you sure you want to withdraw your application for: ' + jobTitle + '?')) {
                    // Here you would normally make an API call to withdraw the application
                    alert('Application withdrawn successfully!');
                    // Close the modal
                    $('#applicationDetailsModal').modal('hide');
                    // Then remove the row from the table
                    $('tbody tr').each(function() {
                        if ($(this).find('.font-weight-bold').text() === jobTitle) {
                            $(this).fadeOut(300, function() {
                                $(this).remove();
                                
                                // Check if no applications remain, then show empty state
                                if($('tbody tr').length === 0) {
                                    $('#emptyState').removeClass('d-none');
                                }
                            });
                        }
                    });
                }
            });
            
            // Status filter
            $('.dropdown-item').click(function(e) {
                e.preventDefault();
                
                // Update active state
                $('.dropdown-item').removeClass('active');
                $(this).addClass('active');
                
                // Update dropdown button text
                var statusText = $(this).text();
                $('#statusFilterDropdown').text('Filter by status: ' + statusText);
                
                // Here you would normally filter the applications based on the selected status
                alert('Filtering applications by status: ' + statusText);
            });
        });
    </script>
} 