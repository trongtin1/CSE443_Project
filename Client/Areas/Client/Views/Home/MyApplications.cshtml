                                    </div>
                                </td>
                                <td>15/07/2023</td>
                                <td><span class="badge badge-info">Under Review</span></td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-primary view-application" data-toggle="tooltip" title="View details">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-danger withdraw-application" data-toggle="tooltip" title="Withdraw application">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            
                            <!-- Application 2 -->
