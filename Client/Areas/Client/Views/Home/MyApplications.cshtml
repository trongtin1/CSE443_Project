@{
    ViewData["Title"] = "My Applications";
    Layout = "~/Areas/Client/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
