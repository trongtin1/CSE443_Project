@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Job Connect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 250px;
            background: #fff;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
            transition: all 0.3s;
            z-index: 1000;
        }

        .sidebar-brand {
            padding: 20px;
            display: flex;
            align-items: center;
            border-bottom: 1px solid #eee;
        }

        .sidebar-brand img {
            width: 40px;
            height: 40px;
            margin-right: 10px;
        }

        .sidebar-brand-text {
            font-size: 1.2rem;
            font-weight: bold;
            color: #6C63FF;
        }

        .nav {
            padding: 20px 0;
        }

        .nav-item {
            margin: 5px 0;
        }

        .nav-link {
            padding: 12px 20px;
            color: #666;
            display: flex;
            align-items: center;
            transition: all 0.3s;
        }

        .nav-link:hover {
            background: #f8f9fa;
            color: #6C63FF;
        }

        .nav-link.active {
            background: #6C63FF;
            color: white;
        }

        .nav-link i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
        }

        .content-wrapper {
            margin-left: 250px;
            padding: 20px;
            min-height: 100vh;
        }

        .footer {
            margin-left: 250px;
            padding: 20px;
            background: #fff;
            text-align: center;
            border-top: 1px solid #eee;
        }

        
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-brand">
            <img src="/images/logo.png" alt="Logo" style="height:40px;">
            <span class="sidebar-brand-text">Job Connect</span>
        </div>
        
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Dashboard" ? "active" : "")" 
                   href="@Url.Action("Dashboard", "Candidate", new { area = "Client" })">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "CreateCV" ? "active" : "")" 
                   href="@Url.Action("CreateCV", "Candidate", new { area = "Client" })">
                    <i class="fas fa-file-alt"></i>
                    <span>Create CV</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "ApplyJobs" ? "active" : "")" 
                   href="@Url.Action("ApplyJobs", "Candidate", new { area = "Client" })">
                    <i class="fas fa-briefcase"></i>
                    <span>Job Search</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "SavedJobs" ? "active" : "")" 
                   href="@Url.Action("SavedJobs", "Candidate", new { area = "Client" })">
                    <i class="fas fa-bookmark"></i>
                    <span>Saved Jobs</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "MyApplications" ? "active" : "")" 
                   href="@Url.Action("MyApplications", "Candidate", new { area = "Client" })">
                    <i class="fas fa-paper-plane"></i>
                    <span>Applied Jobs</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Profile" ? "active" : "")" 
                   href="@Url.Action("Profile", "Candidate", new { area = "Client" })">
                    <i class="fas fa-user"></i>
                    <span>Profile</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Logout", "Account", new { area = "" })">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="content-wrapper">
        @RenderBody()
    </div>

    <footer class="footer">
        <p>&copy; 2024 - Job Connect</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 