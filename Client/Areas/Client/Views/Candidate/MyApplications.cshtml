@{
    ViewData["Title"] = "Việc Đã Nộp";
    Layout = "~/Areas/Client/Views/Shared/_Layout.cshtml";
}
<style>
    .applied-list-container { max-width: 800px; margin: 40px auto; }
    .applied-card {
        background: #fffaf8;
        border-radius: 14px;
        box-shadow: 0 2px 12px #eee;
        padding: 20px 24px;
        margin-bottom: 20px;
        border-left: 5px solid #6C63FF;
        display: flex; justify-content: space-between; align-items: center;
    }
    .applied-info { flex: 1; }
    .applied-title { color: #6C63FF; font-weight: bold; font-size: 1.1rem; }
    .applied-meta { color: #888; font-size: 0.97rem; }
    .applied-status { font-size: 0.98rem; font-weight: 500; color: #28a745; }
  
</style>
<div class="applied-list-container">
    <h2 class="mb-4" style="color:#6C63FF; font-weight:bold; text-align:center;">Việc Đã Nộp</h2>
    <div class="applied-card">
        <div class="applied-info">
            <div class="applied-title">Chuyên viên Marketing</div>
            <div class="applied-meta">Công ty DEF · Đà Nẵng · 12-18 triệu</div>
        </div>
        <span class="applied-status">Đã nộp</span>
    </div>
    <div class="applied-card">
        <div class="applied-info">
            <div class="applied-title">Thiết kế đồ họa</div>
            <div class="applied-meta">Công ty GHI · Hà Nội · 10-16 triệu</div>
        </div>
        <span class="applied-status">Đã nộp</span>
    </div>
</div> 