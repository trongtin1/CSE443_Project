@{
    ViewData["Title"] = "Tìm Việc Làm";
    Layout = "~/Areas/Client/Views/Shared/_Layout.cshtml";
}
<style>
    .job-list-container { max-width: 800px; margin: 40px auto; }
    .job-card {
        background: #fffaf8;
        border-radius: 14px;
        box-shadow: 0 2px 12px #eee;
        padding: 24px 28px;
        margin-bottom: 24px;
        transition: box-shadow 0.2s;
        border-left: 5px solid #6C63FF;
    }
    .job-card:hover { box-shadow: 0 4px 24px #e0e0ff; }
    .job-title { color: #6C63FF; font-size: 1.25rem; font-weight: bold; }
    .job-meta { color: #888; font-size: 0.98rem; margin-bottom: 8px; }
    .job-desc { color: #444; margin-bottom: 12px; }
    .job-action { text-align: right; }
    .btn-apply {
        background: #6C63FF; color: #fff; border: none; border-radius: 8px;
        padding: 8px 24px; font-weight: 500; transition: background 0.2s;
    }
    .btn-apply:hover { background: #5a52e0; }
    
</style>
<div class="job-list-container">
    <h2 class="mb-4" style="color:#6C63FF; font-weight:bold; text-align:center;">Tìm Việc Làm</h2>
    <div class="job-card">
        <div class="job-title">Nhân viên Kinh doanh</div>
        <div class="job-meta">Công ty ABC · Hà Nội · 10-15 triệu</div>
        <div class="job-desc">Tìm kiếm khách hàng, tư vấn sản phẩm, phát triển thị trường.</div>
        <div class="job-action"><button class="btn-apply">Ứng tuyển</button></div>
    </div>
    <div class="job-card">
        <div class="job-title">Lập trình viên .NET</div>
        <div class="job-meta">Công ty XYZ · TP.HCM · 15-25 triệu</div>
        <div class="job-desc">Phát triển phần mềm, bảo trì hệ thống, làm việc nhóm Agile.</div>
        <div class="job-action"><button class="btn-apply">Ứng tuyển</button></div>
    </div>
    <div class="job-card">
        <div class="job-title">Chuyên viên Marketing</div>
        <div class="job-meta">Công ty DEF · Đà Nẵng · 12-18 triệu</div>
        <div class="job-desc">Lên kế hoạch marketing, quản lý chiến dịch quảng cáo.</div>
        <div class="job-action"><button class="btn-apply">Ứng tuyển</button></div>
    </div>
    <div class="job-card">
        <div class="job-title">Thiết kế đồ họa</div>
        <div class="job-meta">Công ty GHI · Hà Nội · 10-16 triệu</div>
        <div class="job-desc">Thiết kế banner, poster, nhận diện thương hiệu.</div>
        <div class="job-action"><button class="btn-apply">Ứng tuyển</button></div>
    </div>
</div> 