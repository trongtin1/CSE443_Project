@{
    ViewData["Title"] = "Việc Đã Lưu";
    Layout = "~/Areas/Client/Views/Shared/_Layout.cshtml";
}
<style>
    .saved-list-container { max-width: 800px; margin: 40px auto; }
    .saved-card {
        background: #fffaf8;
        border-radius: 14px;
        box-shadow: 0 2px 12px #eee;
        padding: 20px 24px;
        margin-bottom: 20px;
        border-left: 5px solid #6C63FF;
        display: flex; justify-content: space-between; align-items: center;
    }
    .saved-info { flex: 1; }
    .saved-title { color: #6C63FF; font-weight: bold; font-size: 1.1rem; }
    .saved-meta { color: #888; font-size: 0.97rem; }
    .btn-remove {
        background: #fff; color: #6C63FF; border: 1px solid #6C63FF;
        border-radius: 8px; padding: 6px 18px; font-weight: 500;
        transition: background 0.2s, color 0.2s;
    }
    .btn-remove:hover { background: #6C63FF; color: #fff; }
    
</style>
<div class="saved-list-container">
    <h2 class="mb-4" style="color:#6C63FF; font-weight:bold; text-align:center;">Việc Đã Lưu</h2>
    <div class="saved-card">
        <div class="saved-info">
            <div class="saved-title">Lập trình viên Java</div>
            <div class="saved-meta">Công ty ABC · Hà Nội · 12-18 triệu</div>
        </div>
        <button class="btn-remove">Xóa</button>
    </div>
    <div class="saved-card">
        <div class="saved-info">
            <div class="saved-title">Nhân viên Kế toán</div>
            <div class="saved-meta">Công ty XYZ · TP.HCM · 10-15 triệu</div>
        </div>
        <button class="btn-remove">Xóa</button>
    </div>
</div> 