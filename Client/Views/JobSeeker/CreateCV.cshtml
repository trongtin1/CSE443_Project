@model CV

@{
    ViewData["Title"] = "Create CV";
}

<div class="container my-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3 mb-0">Create New CV</h1>
            <p class="text-muted">Add a new CV to your profile</p>
        </div>
        <div class="col-md-4 text-md-end">
            <a asp-action="CVs" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left me-1"></i> Back to My CVs
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">CV Guidelines</h5>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <h6 class="fw-bold"><i class="fas fa-lightbulb text-warning me-2"></i>Tips for a Great CV</h6>
                        <ul class="list-unstyled ps-4 mb-0">
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Keep it concise and relevant</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Highlight your key achievements</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Tailor your CV for specific jobs</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Use action verbs to describe responsibilities</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Proofread carefully for errors</li>
                        </ul>
                    </div>
                    
                    <div>
                        <h6 class="fw-bold"><i class="fas fa-exclamation-circle text-danger me-2"></i>Things to Avoid</h6>
                        <ul class="list-unstyled ps-4 mb-0">
                            <li class="mb-2"><i class="fas fa-times text-danger me-2"></i>Generic objectives or summaries</li>
                            <li class="mb-2"><i class="fas fa-times text-danger me-2"></i>Irrelevant work experience</li>
                            <li class="mb-2"><i class="fas fa-times text-danger me-2"></i>Spelling and grammar mistakes</li>
                            <li class="mb-2"><i class="fas fa-times text-danger me-2"></i>Unprofessional email addresses</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-8">
            <form asp-action="CreateCV" method="post" enctype="multipart/form-data">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">CV Information</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">CV Title</label>
                            <input asp-for="Title" class="form-control" placeholder="e.g. Software Developer CV, Project Manager CV">
                            <span asp-validation-for="Title" class="text-danger"></span>
                            <div class="form-text">Give your CV a descriptive title to easily identify it later</div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Brief description of this CV's purpose or focus"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <div class="form-text">Describe what this CV is for (e.g. "For tech positions" or "Highlighting project management skills")</div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="cvFile" class="form-label">Upload CV File</label>
                            <input type="file" class="form-control" id="cvFile" name="cvFile" accept=".pdf,.doc,.docx">
                            <div class="form-text">Upload your CV document (PDF, DOC, or DOCX format, max 5MB)</div>
                        </div>
                        
                        <div class="form-check mb-0">
                            <input class="form-check-input" type="checkbox" id="isDefault" name="isDefault">
                            <label class="form-check-label" for="isDefault">
                                Set as default CV
                            </label>
                            <div class="form-text">Your default CV will be used automatically when applying for jobs</div>
                        </div>
                    </div>
                </div>
                
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">Personal Information</h5>
                        <p class="text-muted small mb-0">This information will be pre-filled from your profile but can be customized for this CV</p>
                    </div>
                    <div class="card-body p-4">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Your personal information from your profile will be automatically associated with this CV. You can update your profile information on the <a asp-action="Profile" class="alert-link">Profile page</a>.
                        </div>
                    </div>
                </div>
                
                <div class="d-flex justify-content-end mb-4">
                    <a asp-action="CVs" class="btn btn-outline-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">Create CV</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // File size validation
        document.getElementById('cvFile').addEventListener('change', function() {
            const fileInput = this;
            const maxSize = 5 * 1024 * 1024; // 5MB
            
            if (fileInput.files.length > 0) {
                const fileSize = fileInput.files[0].size;
                if (fileSize > maxSize) {
                    alert('File size exceeds 5MB. Please choose a smaller file.');
                    fileInput.value = '';
                }
            }
        });
    </script>
} 