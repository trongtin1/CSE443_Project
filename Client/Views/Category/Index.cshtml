@model IEnumerable<JobCategory>

@{
    ViewData["Title"] = "Job Categories";
}

<div class="container my-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3 mb-0">Job Categories</h1>
            <p class="text-muted">Browse jobs by category</p>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var category in Model)
        {
            <div class="col-md-4 col-lg-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center p-4">
                        <div class="category-icon mb-3">
                            <i class="fas fa-briefcase fa-3x text-primary"></i>
                        </div>
                        <h5 class="card-title">@category.Name</h5>
                        <p class="text-muted mb-3">
                            @ViewData[$"JobCount_{category.Id}"] Jobs Available
                        </p>
                        <a asp-controller="Job" asp-action="ByCategory" asp-route-id="@category.Id"
                            class="btn btn-outline-primary">
                            View Jobs
                        </a>

                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-4">
            <i class="fas fa-info-circle me-2"></i> No job categories found.
            @if (Context.Session.GetInt32("EmployerId") != null)
            {
                <a asp-action="Create" class="alert-link">Create a new category</a>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Add any JavaScript needed for the categories page
    </script>
}