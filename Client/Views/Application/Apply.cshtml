@using System.Linq
@model Application

@{
    ViewData["Title"] = "Apply for Job";
    var job = ViewBag.Job;
    var cvs = ViewBag.CVs;
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h3 mb-0">Apply for Job</h1>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back
                        </a>
                    </div>

                    <div class="mb-4 p-3 bg-light rounded">
                        <div class="d-flex align-items-center mb-2">
                            @* @if (!string.IsNullOrEmpty(job.Employer?.LogoUrl))
                            {
                                <img src="@job.Employer.LogoUrl" alt="@job.Employer.CompanyName" class="me-3" style="width: 50px; height: 50px; object-fit: contain;">
                            }
                            else
                            {
                                <div class="company-placeholder me-3">
                                    <i class="fas fa-building fa-2x text-muted"></i>
                                </div>
                            } *@
                            <div>
                                <h5 class="mb-0">@job.JobTitle</h5>
                                <p class="text-muted mb-0">@job.Employer.CompanyName</p>
                            </div>
                        </div>
                        <div class="mt-2">
                            <span class="badge bg-@(job.JobType == "Full-time" ? "success" : 
                                                job.JobType == "Part-time" ? "info" : 
                                                job.JobType == "Contract" ? "warning" : 
                                                job.JobType == "Internship" ? "secondary" : "primary")">
                                @job.JobType
                            </span>
                            <span class="ms-2">
                                <i class="fas fa-map-marker-alt text-muted me-1"></i> @job.Location
                            </span>
                        </div>
                    </div>

                    <form asp-action="Apply" asp-route-id="@job.Id" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Select CV</label>
                            @if (cvs != null && (cvs is IEnumerable<dynamic>) && ((IEnumerable<dynamic>)cvs).Any())
                            {
                                <div class="list-group mb-3">
                                    @foreach (var cv in cvs)
                                    {
                                        <label class="list-group-item list-group-item-action">
                                            <div class="d-flex align-items-center">
                                                <input class="form-check-input me-3" type="radio" name="CVId" value="@cv.Id" @(cv.IsDefault ? "checked" : "")>
                                                <div>
                                                    <h6 class="mb-1">@cv.Title</h6>
                                                    <p class="text-muted small mb-0">
                                                        Last updated: @cv.UpdatedAt?.ToString("MMM dd, yyyy") ?? cv.CreatedAt.ToString("MMM dd, yyyy")
                                                        @if (cv.IsDefault)
                                                        {
                                                            <span class="badge bg-primary ms-2">Default</span>
                                                        }
                                                    </p>
                                                </div>
                                            </div>
                                        </label>
                                    }
                                </div>
                                <div class="text-end mb-3">
                                    <a asp-controller="JobSeeker" asp-action="CreateCV" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-plus-circle me-1"></i> Create New CV
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning mb-3">
                                    <i class="fas fa-exclamation-triangle me-2"></i> You don't have any CVs yet.
                                </div>
                                <div class="text-center mb-3">
                                    <a asp-controller="JobSeeker" asp-action="CreateCV" class="btn btn-primary">
                                        <i class="fas fa-plus-circle me-1"></i> Create CV
                                    </a>
                                </div>
                            }
                        </div>

                        <div class="mb-4">
                            <label asp-for="CoverLetter" class="form-label fw-bold">Cover Letter</label>
                            <textarea asp-for="CoverLetter" class="form-control" rows="6" placeholder="Introduce yourself and explain why you're a good fit for this position..."></textarea>
                            <span asp-validation-for="CoverLetter" class="text-danger"></span>
                            <div class="form-text">
                                A well-written cover letter can help you stand out from other applicants.
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                                <label class="form-check-label" for="agreeTerms">
                                    I confirm that the information provided is accurate and complete.
                                </label>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Submit Application</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 