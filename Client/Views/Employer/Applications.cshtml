@model IEnumerable<Application>

@{
    ViewData["Title"] = "Applications";
}

<div class="container my-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3 mb-0">
                @if (ViewBag.Job != null)
                {
                    <span>Applications for @ViewBag.Job.Title</span>
                }
                else if (ViewBag.Status != null)
                {
                    <span>@ViewBag.Status Applications</span>
                }
                else
                {
                    <span>All Applications</span>
                }
            </h1>
            <p class="text-muted">Manage job applications from candidates</p>
        </div>
        <div class="col-md-4 text-md-end">
            <div class="dropdown">
                <button class="btn btn-outline-primary dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    Filter by Status
                </button>
                <ul class="dropdown-menu" aria-labelledby="filterDropdown">
                    <li><a class="dropdown-item" asp-action="Applications">All Applications</a></li>
                    <li><a class="dropdown-item" asp-action="ApplicationsByStatus" asp-route-status="Pending">Pending</a></li>
                    <li><a class="dropdown-item" asp-action="ApplicationsByStatus" asp-route-status="Shortlisted">Shortlisted</a></li>
                    <li><a class="dropdown-item" asp-action="ApplicationsByStatus" asp-route-status="Interviewed">Interviewed</a></li>
                    <li><a class="dropdown-item" asp-action="ApplicationsByStatus" asp-route-status="Offered">Offered</a></li>
                    <li><a class="dropdown-item" asp-action="ApplicationsByStatus" asp-route-status="Rejected">Rejected</a></li>
                </ul>
            </div>
        </div>
    </div>
    
    @if (Model.Any())
    {
        <!-- Application Status Summary -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Application Status Summary</h5>
                        <div class="row mt-3">
                            <div class="col-md-2 col-sm-4 col-6 mb-3 text-center">
                                <div class="p-3 rounded bg-warning bg-opacity-10">
                                    <h6 class="mb-1">Pending</h6>
                                    <h4 class="mb-0">@Model.Count(a => a.Status == "Pending")</h4>
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-4 col-6 mb-3 text-center">
                                <div class="p-3 rounded bg-info bg-opacity-10">
                                    <h6 class="mb-1">Shortlisted</h6>
                                    <h4 class="mb-0">@Model.Count(a => a.Status == "Shortlisted")</h4>
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-4 col-6 mb-3 text-center">
                                <div class="p-3 rounded bg-primary bg-opacity-10">
                                    <h6 class="mb-1">Interviewed</h6>
                                    <h4 class="mb-0">@Model.Count(a => a.Status == "Interviewed")</h4>
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-4 col-6 mb-3 text-center">
                                <div class="p-3 rounded bg-success bg-opacity-10">
                                    <h6 class="mb-1">Offered</h6>
                                    <h4 class="mb-0">@Model.Count(a => a.Status == "Offered")</h4>
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-4 col-6 mb-3 text-center">
                                <div class="p-3 rounded bg-danger bg-opacity-10">
                                    <h6 class="mb-1">Rejected</h6>
                                    <h4 class="mb-0">@Model.Count(a => a.Status == "Rejected")</h4>
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-4 col-6 mb-3 text-center">
                                <div class="p-3 rounded bg-secondary bg-opacity-10">
                                    <h6 class="mb-1">Total</h6>
                                    <h4 class="mb-0">@Model.Count()</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Applications Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Applicant</th>
                                <th>Job Title</th>
                                <th>Applied On</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var application in Model.OrderByDescending(a => a.ApplicationDate))
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-placeholder bg-primary bg-opacity-10 rounded-circle p-2 me-2">
                                                <i class="fas fa-user text-primary"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0">@application.JobSeeker.User.Username</h6>
                                                <small class="text-muted">@application.JobSeeker.User.Email</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <a asp-controller="Job" asp-action="Details" asp-route-id="@application.JobId" class="text-decoration-none">
                                            @application.Job.JobTitle
                                        </a>
                                    </td>
                                    <td>@application.ApplicationDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <span class="badge bg-@(application.Status == "Pending" ? "warning" : 
                                                              application.Status == "Shortlisted" ? "info" : 
                                                              application.Status == "Interviewed" ? "primary" : 
                                                              application.Status == "Offered" ? "success" : 
                                                              application.Status == "Rejected" ? "danger" : "secondary")">
                                            @application.Status
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-controller="Application" asp-action="Details" asp-route-id="@application.Id" class="btn btn-sm btn-outline-primary">
                                            View Details
                                        </a>
                                        
                                        <div class="dropdown d-inline-block ms-1">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="statusDropdown_@application.Id" data-bs-toggle="dropdown" aria-expanded="false">
                                                Update Status
                                            </button>
                                            <ul class="dropdown-menu" aria-labelledby="statusDropdown_@application.Id">
                                                <li>
                                                    <form asp-controller="Application" asp-action="UpdateStatus" asp-route-id="@application.Id" method="post">
                                                        <input type="hidden" name="status" value="Pending" />
                                                        <button type="submit" class="dropdown-item">Pending</button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form asp-controller="Application" asp-action="UpdateStatus" asp-route-id="@application.Id" method="post">
                                                        <input type="hidden" name="status" value="Shortlisted" />
                                                        <button type="submit" class="dropdown-item">Shortlist</button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form asp-controller="Application" asp-action="UpdateStatus" asp-route-id="@application.Id" method="post">
                                                        <input type="hidden" name="status" value="Interviewed" />
                                                        <button type="submit" class="dropdown-item">Interviewed</button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form asp-controller="Application" asp-action="UpdateStatus" asp-route-id="@application.Id" method="post">
                                                        <input type="hidden" name="status" value="Offered" />
                                                        <button type="submit" class="dropdown-item">Offer Job</button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form asp-controller="Application" asp-action="UpdateStatus" asp-route-id="@application.Id" method="post">
                                                        <input type="hidden" name="status" value="Rejected" />
                                                        <button type="submit" class="dropdown-item">Reject</button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4 text-center">
                <div class="py-4">
                    <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                    <h5>No applications found</h5>
                    @if (ViewBag.Job != null)
                    {
                        <p class="text-muted">There are no applications for this job yet.</p>
                    }
                    else if (ViewBag.Status != null)
                    {
                        <p class="text-muted">There are no applications with status '@ViewBag.Status'.</p>
                    }
                    else
                    {
                        <p class="text-muted">You haven't received any job applications yet.</p>
                        <a asp-controller="Job" asp-action="Create" class="btn btn-primary mt-2">
                            <i class="fas fa-plus-circle me-1"></i> Post a Job
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Add any JavaScript needed for the applications page
    </script>
} 